<p id="notice"><%= notice %></p>

<h1>Universities</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Location</th>
      <th>Website</th>
      <th>Rank</th>
      <th>Cost</th>
      <th>Students</th>
      <th>Content</th>
      <th>Acceptance Rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= image_tag school.image %></td>  
        <td><%= school.name %></td>
        <td><%= school.location %></td>
        <td><%= school.website %></td>
        <td><%= school.rank %></td>
        <td><%= school.cost %></td>
        <td><%= school.student_num %></td>
        <td><%= school.content %></td>
        <td><%= school.acceptance_rate %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

